{
  "builders": [
    {
      "changes": [
        "ENV LANG en_US.UTF-8",
        "ENV LC_ALL en_US.UTF-8",
        "ENV SHELL /bin/bash",
        "ENV TZ UTC",
        "VOLUME /home/gitlab-runner",
        "WORKDIR /home/gitlab-runner",
        "ENTRYPOINT [\"catatonit\", \"-g\", \"--\", \"docker-entrypoint.sh\"]",
        "CMD [\"gitlab-runner\", \"run\", \"--config=/etc/gitlab-runner/config.toml\", \"--user=gitlab-runner\", \"--working-directory=/home/gitlab-runner\"]"
      ],
      "commit": true,
      "image": "ubuntu:20.04",
      "type": "docker"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "set -ex",
        "apt-get update",
        "apt-get dist-upgrade -y",
        "apt-get install -y ca-certificates curl gcc iproute2 python3 python3-dev sudo"
      ],
      "type": "shell"
    },
    {
      "galaxy_file": "./ansible-galaxy-requirements.yml",
      "inventory_directory": "./",
      "playbook_file": "./packer.yml",
      "type": "ansible"
    }
  ]
}

